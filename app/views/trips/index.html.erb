<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table>
  <thead>
    <tr>
      <th>Depdate</th>
      <th>Place</th>
      <th>Description</th>
      <th>Phone</th>
      <th>Capacity</th>
      <th>Car</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.depdate %></td>
        <td><%= trip.place %></td>
        <td><%= trip.description %></td>
        <td><%= trip.phone %></td>
        <td><%= trip.capacity %></td>
        <td><%= trip.car %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

